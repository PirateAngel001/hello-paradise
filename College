package academicprogram;
import java.util.Scanner;

/**
 *
 * @author CC2_1E-2
 */
public class AcademicProgram {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        
        
        System.out.println("What course did you take in college?");
        String AP = s.next();
        if (AP.equals("CAS")){
            System.out.println("What program are you in?");
            String AP1 = s.next();
            if (AP1.equals("BAE")){
                System.out.println("You took the course CAS and you are in the program BAE.");
            }else if (AP1.equals("BAPS")){
                System.out.println("You took the course CAS and you are in the program BAPS.");
                }else if (AP1.equals("BAC")){
                    System.out.println("You took the course CAS and you are in the program BAC.");
                    }else if (AP1.equals("BSP")){
                        System.out.println("You took the course CAS and you are in the program BSP.");
                    }else {
                        System.out.println("You don't belong to CAS!.");
                        
        }
        }
        
         if (AP.equals("COA")){
            System.out.println("What program are you in?");
            String AP1 = s.next();
            if (AP1.equals("BSA")){
                System.out.println("You took the course COA and you are in the program BSA.");
            }else if (AP1.equals("BSAT")){
                System.out.println("You took the course COA and you are in the program BSAT.");
                }else if (AP1.equals("BSMA")){
                    System.out.println("You took the course COA and you are in the program BSMA.");
                    }else if (AP1.equals("BSFA")){
                        System.out.println("You took the course COA and you are in the program BSFA.");
                    }else {
                        System.out.println("You don't belong to COA!.");
                        
         }
         }
         
          if (AP.equals("CBA")){
            System.out.println("What program are you in?");
            String AP1 = s.next();
            if (AP1.equals("BSBA")){
                System.out.println("You took the course CBA and you are in the program BSBA.");
            }else if (AP1.equals("BSE")){
                System.out.println("You took the course CBA and you are in the program BSE.");
                }else if (AP1.equals("BSOA")){
                    System.out.println("You took the course CBA and you are in the program BSOA.");
                    }else {
                        System.out.println("You don't belong to CBA!.");
                        
          }
          }
          
           if (AP.equals("CEA")){
            System.out.println("What program are you in?");
            String AP1 = s.next();
            if (AP1.equals("BSA")){
                System.out.println("You took the course CEA and you are in the program BSA.");
            }else if (AP1.equals("BSC")){
                System.out.println("You took the course CEA and you are in the program BSC.");
                }else if (AP1.equals("BSCE")){
                    System.out.println("You took the course CEA and you are in the program BSCE.");
                    }else if (AP1.equals("BSEE")){
                        System.out.println("You took the course CEA and you are in the program BSEE.");
                        }else if (AP1.equals("BSESE")){
                        System.out.println("You took the course CEA and you are in the program BSESE.");
                    }else {
                        System.out.println("You don't belong to CEA!.");
                        
           }
           }
           
            if (AP.equals("CITCS")){
            System.out.println("What program are you in?");
            String AP1 = s.next();
            if (AP1.equals("BSCS")){
                System.out.println("You took the course CITCS and you are in the program BSCS.");
            }else if (AP1.equals("BSIT")){
                System.out.println("You took the course CITCS and you are in the program BSIT.");
                }else if (AP1.equals("BSIS")){
                    System.out.println("You took the course CITCS and you are in the program BSIS.");
                    }else if (AP1.equals("ACT")){
                        System.out.println("You took the course CITCS and you are in the program ACT.");
                    }else {
                        System.out.println("You don't belong to CITCS!.");
                        
            }
            }
            
              if (AP.equals("CTE")){
            System.out.println("What program are you in?");
            String AP1 = s.next();
            if (AP1.equals("BSEE-General")){
                System.out.println("You took the course CTE and you are in the program BSEE-General.");
            }else if (AP1.equals("BSEE")){
                System.out.println("You took the course CTE and you are in the program BSEE.");
                }else if (AP1.equals("BSSE")){
                    System.out.println("You took the course CTE and you are in the program BSSE.");
                    }else {
                        System.out.println("You don't belong to CTE!.");
                        
                }
              }
    }
}

              
           
